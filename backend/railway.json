{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm run build",
        "watchPatterns": ["src/**"]
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "npm run start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "environments": {
        "production": {
            "variables": {
                "NODE_ENV": "production",
                "PORT": "${{ RAILWAY_PUBLIC_PORT }}",
                "DATABASE_URL": "${{ DATABASE_URL }}",
                "REDIS_URL": "${{ REDIS_URL }}"
            }
        }
    }
}